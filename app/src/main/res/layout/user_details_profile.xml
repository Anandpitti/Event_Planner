<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/signup_page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:gravity="center"
        android:minWidth="340dp"
        android:minHeight="340dp"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/detials_tabs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/user_profile_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:minWidth="140dp"
                android:text="Profile"
                android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/detils_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detials_tabs_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayout">

                <TextView
                    android:id="@+id/detials_emailid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email id"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent" />

                <TextView
                    android:id="@+id/detials_emailid_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:textSize="17dp"
                    android:text="Email id"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_emailid_text"/>

                <TextView
                    android:id="@+id/detials_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_below="@+id/detials_emailid_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_password_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_password_text"/>
                <TextView
                    android:id="@+id/detials_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_below="@+id/detials_password_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_user_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_user_name_text"/>

                <TextView
                    android:id="@+id/detials_phone_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:layout_below="@+id/detials_user_name_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_phone_number_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_phone_number_text"/>

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/detils_scroll_view">

            <Button
                android:id="@+id/go_back_to_home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:onClick="go_back_to_home" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
