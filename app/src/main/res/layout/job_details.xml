<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/signup_page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:gravity="center"
        android:minWidth="340dp"
        android:minHeight="340dp"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/job_detials_tabs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/job_profile_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:minWidth="140dp"
                android:text="job details"
                android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/detils_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_detials_tabs_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayout">

                <TextView
                    android:id="@+id/detials_job_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Name"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent" />

                <TextView
                    android:id="@+id/detials_job_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:textSize="17dp"
                    android:text="Email id"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_job_name_text"/>

                <TextView
                    android:id="@+id/detials_job_subject_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:layout_below="@+id/detials_job_name_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_job_subject_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_job_subject_text"/>
                <TextView
                    android:id="@+id/detials_job_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_below="@+id/detials_job_subject_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_job_description_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_job_description_text"/>

                <TextView
                    android:id="@+id/detials_start_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start time"
                    android:layout_below="@+id/detials_job_description_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_start_time_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_start_time_text"/>


                <TextView
                    android:id="@+id/detials_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End time"
                    android:layout_below="@+id/detials_start_time_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_end_time_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_end_time_text"/>

                <TextView
                    android:id="@+id/detials_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:layout_below="@+id/detials_end_time_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_type_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_type_text"/>

                <TextView
                    android:id="@+id/detials_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place"
                    android:layout_below="@+id/detials_type_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_place_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_place_text"/>

                <TextView
                    android:id="@+id/detials_start_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Point"
                    android:layout_below="@+id/detials_place_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_start_point_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_start_point_text"/>

                <TextView
                    android:id="@+id/detials_destination_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:layout_below="@+id/detials_start_point_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_destination_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_destination_text"/>

                <TextView
                    android:id="@+id/detials_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_below="@+id/detials_destination_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_status_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_status_text"/>

                <TextView
                    android:id="@+id/detials_people_involved_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="People involved"
                    android:layout_below="@+id/detials_status_input"
                    android:textSize="19dp"
                    android:padding="5dp"
                    android:textColor="@color/blackAccent"/>

                <TextView
                    android:id="@+id/detials_people_involved_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:text="Email id"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_below="@+id/detials_people_involved_text"/>


                <Button
                    android:id="@+id/go_back_to_job_page_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detials_people_involved_input"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="go_back_to_job_list"
                    android:text="BACK"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/go_back_to_job_page_button"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
