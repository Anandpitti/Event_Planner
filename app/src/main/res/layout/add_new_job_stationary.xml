<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/signup_page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="340dp"
        android:minHeight="340dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false">

        <RelativeLayout
            android:id="@+id/new_job_stationary_tabs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/new_job_stationary_profile_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:minWidth="140dp"
                android:text="New job"
                android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/new_job_stationary_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_below="@+id/new_job_stationary_tabs_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tabs_layout"
                android:layout_marginTop="30dp"
                android:id="@+id/new_job_stationary_tabs_view">

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter the place where the event is happening"
                    android:textColor="@color/blackAccent"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/place_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="300dp"
                    android:layout_below="@+id/place_name"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/place_name_input">

                    <Button
                        android:id="@+id/go_back_to_page1_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:onClick="on_return_page1"
                        android:text="back"
                        android:layout_margin="10dp"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/create_new_job_stationary_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/go_back_to_page1_button"
                        android:background="@color/colorPrimaryDark"
                        android:onClick="on_page_stationary_finished"
                        android:text="next"
                        android:layout_margin="10dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/create_new_job_stationary_button1"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
