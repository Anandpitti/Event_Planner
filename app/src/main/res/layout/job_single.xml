<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/job_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/jobicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:gravity="center"
        android:layout_toRightOf="@id/job_icon"
        android:textSize="24dp"
        android:textColor="@color/blackAccent"
        android:text="TextView" />

    <TextView
        android:id="@+id/start_time"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_toRightOf="@id/job_icon"
        android:layout_below="@+id/job_name"
        android:textColor="@color/blackAccent"
        android:textSize="15dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/people_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/account"
        android:tint="@color/colorPrimaryDark"
        android:layout_below="@+id/job_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/people_count"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="15dp"
        android:gravity="bottom"
        android:text="TextView"
        android:layout_alignTop="@+id/people_icon"
        android:layout_toStartOf="@+id/people_icon" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/job_icon"
        android:background="@color/colorPrimary"
        android:id="@+id/job_status_display"
        android:shadowColor="@color/blackAccent"/>

</RelativeLayout>